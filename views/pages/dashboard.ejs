<!DOCTYPE html>
<html>
  <head>
    <% include ../partials/head %>
  </head>
  <body>
    <header>
      <% include ../partials/header %>
    </header>

    <h1>Dashboard</h1>
    <!-- Create a new trip, modal form -->
    <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#myModal">
      <i class="fa fa-plus"></i> New trip
    </button>

    <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
      <div class="modal-dialog" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            <h4 class="modal-title" id="myModalLabel">New Trip</h4>
          </div>
          <div class="modal-body">
            <form role="form" action="/trip/new" method="POST">
              <div class="form-group">
                <label for="name">Name of trip:</label>
                <input type="text" class="form-control" id="name"required/>
              </div>
              <div class="form-group">
                <label for="start-city">Start city:</label>
                <input type="text" class="form-control" id="start-city" required/>
              </div>
              <div class="form-group">
                <label for="end-city">End city:</label>
                <input type="text" class="form-control" id="end-city" required/>
              </div>
              <button type="submit" class="btn btn-primary">Create trip</button>
            </form>
          </div>
        </div>
      </div>
    </div>


    <% include ../partials/footer %>

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.4/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js" integrity="sha384-0mSbJDEHialfmuBBQP6A4Qrprq5OVfW37PRR3j5ELqxss1yVqOtnepnHVP9aJ7xS" crossorigin="anonymous"></script>
  </body>
</html>
